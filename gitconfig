
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green
[alias]
  # Shows list of contributors of a repository.
  contributors = shortlog --summary --numbered --email

  # via http://philjackson.github.io/2013/04/07/handy-git-tips-to-stop-you-getting-fired.html
  snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
  snapshots = !git stash list --grep snapshot

  #via http://stackoverflow.com/questions/5188320/how-can-i-get-a-list-of-git-branches-ordered-by-most-recent-commit
  recent-branches = !git for-each-ref --count=15 --sort=-committerdate refs/heads/ --format='%(committerdate:short) %(refname:short)'
  
  s = status                        # status
  b = branch -v                     # branch (verbose)
  c = commit -m                     # commit with message
  # ammend = commit --amend           # ammend your last commit
  co = checkout                     # checkout
  cp = cherry-pick -x               # grab a change from a branch

  # diff
  d = diff                          # diff unstaged changes
  dc = diff --cached                # diff staged changes
  last = diff HEAD^                 # diff last committed change

  # log
  l = log --graph --date=short
  changes = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\" --name-status
  short = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\"
  simple = log --pretty=format:\" * %s\"

  pl = pull                         # pull
  ps = push                         # push
  
  # reset
  unstage = reset HEAD              # remove files from index (tracking)
  uncommit = reset --soft HEAD^     # go back before last commit, with files in uncommitted state
[format]
  pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[mergetool]
  prompt = false # Disable confirmation prompt before opening merge tool - automatically open without asking
[merge]
  summary = true # Show summary of commits being merged (list of commits from other branch)
  verbosity = 1 # Verbosity level when merging: 0=minimal, 1=moderate, 2=most detailed
[apply]
  whitespace = nowarn # Don't warn about whitespace errors when applying patches (git apply, git am)
[branch]
  # Automatically set up tracking branch.
  # When you create a new branch from a remote branch (e.g., git checkout -b feature origin/feature),
  # Git will automatically configure the local branch to track the remote branch,
  # allowing you to use `git pull` and `git push` without specifying the branch.
  autosetupmerge = true
[push]
  # 'git push' will push the current branch to its tracking branch
  # the usual default is to push all branches
  default = upstream
[core]
  autocrlf = false
  editor = vim
  
  # Global gitignore file - applies to all repos, contains common files/folders to ignore (like .DS_Store, *.log, IDE config...)
  excludesfile = ~/.zsh/gitignore
[advice]
  statusHints = false
[diff]
  # Git diff will use (i)ndex, (w)ork tree, (c)ommit and (o)bject
  # instead of a/b/c/d as prefixes for patches
  mnemonicprefix = true
	algorithm = patience 
[rerere]
  # Remember my merges
  # http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
  enabled = true
